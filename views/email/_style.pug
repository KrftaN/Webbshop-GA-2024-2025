style. 
    main {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    main > section {
        display: grid;
        gap: 15px;
        width: 35vw;
        background-color: #f3f3f3;
        padding-top: 20px;
        padding-bottom: 20px;
    }

    main > section section:nth-child(1) {
        display: flex;
        justify-content: center;
    }

    main > section section:nth-child(1) img {
        width: 50px;
    }

    main > section section:nth-child(2) {
        background-color: #175633;
        display: flex;
        justify-content: center;
        height: 70px;
    }

    main > section section:nth-child(2) img {
        height: 60px;
        margin: auto;
    }

    h2 {
        margin-top: 10px;
    }

    main > section section:nth-child(3) {
        padding-left: 30px;
        padding-right: 30px;
    }

    form {
        display: flex;
        justify-content: center;
    }

    form input {
        width: 250px;
        height: 50px;
        border-radius: 30px;
        border-style: none;
        font-size: 20px;
        background-color: #175633;
        color: #fff;
        cursor: pointer;
    }

    form input:hover {
        background-color: #326e4c;
    }

    div {
        width: 80%;
        height: 1px;
        margin-left: auto;
        margin-right: auto;
        margin-top: 30px;
        margin-bottom: 30px;
        background-color: #175633;
    }

    main > section section:nth-child(6) {
        margin: auto;
    }

    main > section section:nth-child(6) img {
        width: 25px;
    }

    main > section section:nth-child(7) {
        padding: 10px;
    }

    main > section section:nth-child(7) a {
        color: inherit;
        font-size: 18px;
    }
