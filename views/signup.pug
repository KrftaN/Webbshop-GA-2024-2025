extends base

block content
	main
		.form
			form#sign-up-form(action="#", method="post")
				h2 Skapa konto
				label(for="firstName") Förnamn:
				input#firstName(type="text", name="firstName", placeholder="Ange förnamn", pattern="[a-öA-Ö0-9]+", required)

				label(for="lastName") Efternamn:
				input#lastName(type="text", name="lastName", placeholder="Ange efternamn", pattern="[a-öA-Ö0-9]+", required)

				label(for="birthday") Födelsedag:
				input#birthDate(type="date", name="birthday")

				label(for="password") Lösenord:
				input#password(type="password", name="password", placeholder="Ange lösenord", required)

				label(for="confirm_password") Repetera lösenord:
				input#passwordConfirm(type="password", name="confirm_password", placeholder="Repetera lösenord", required)

				h3 Kön
				.radiobox-group#gender
					input#kvinna(type="radio", name="gender", value="female")
					label(for="kvinna") Kvinna
					br
					input#man(type="radio", name="gender", value="male")
					label(for="man") Man
					br
					input#annat(type="radio", name="gender", value="other")
					label(for="annat") Annat
				br

				label(for="email") E-post:
				input#email(type="email", name="email", placeholder="Ange din e-postadress", required)
				br
				br

				button(type="submit") Skapa konto

			a(href="/logga-in") Logga in