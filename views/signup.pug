extends base

block content
	main
		.form
			form(action="#", method="post")
				h2 Skapa konto
				label(for="first_name") Förnamn:
				input(type="text", id="first_name", name="first_name", placeholder="Ange förnamn", pattern="[a-öA-Ö0-9]+", required)
				label(for="second_name") Efterrnamn:
				input(type="text", id="second_name", name="second_name", placeholder="Ange efternamn", pattern="[a-öA-Ö0-9]+", required)
				label(for="birthday") Födelsedag:
				input#birthday(type="date", name="birthday")
				label(for="password") Lösenord:
				input#password(type="password", name="password", placeholder="Ange lösenord", required)
				input(type="password", placeholder="Repetera lösernord", id="confirm_password", required)
				h3 Kön
				.radiobox-group
					input#kvinna(type="radio", name="radio", value="alternativ1")
					label(for="kvinna") Kvinna
					br
					input#man(type="radio", name="radio", value="alternativ2")
					label(for="man") Man
					br
					input#annat(type="radio", name="radio", value="alternativ")
					label(for="annat") Annat
				br
				label(for="email") E-post:
				input#email(type="email", name="email", placeholder="Ange din e-postadress", required)
				br
				br
				button(type="submit") Skapa konto
			a(href="/logga-in")
				button Logga in


